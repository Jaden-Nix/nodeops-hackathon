<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DePIN Open-Source Fund</title>
  <!-- 1. ADD TAILWIND -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- 2. ADD POPPINS FONT -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

  <!-- 3. ADD CONFETTI SCRIPT -->
  <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.9.3/dist/confetti.browser.min.js"></script>

  <style>
    /* 4. SET POPPINS AS THE DEFAULT FONT */
    body {
      font-family: 'Poppins', sans-serif;
    }

    /* 5. "DEEP WATER" ANIMATED AURORA BACKGROUND */
    @keyframes aurora {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    .aurora-bg {
      background: linear-gradient(-45deg, #020617, #030712, #0f172a, #082f49, #01579b, #00c4ff);
      background-size: 600% 600%;
      animation: aurora 25s ease infinite;
    }

    /* 6. GLASSMORPHISM CLASS */
    .glass-card {
      background: rgba(15, 23, 42, 0.3);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* 7. TOAST ANIMATIONS (SLIDE IN/OUT) */
    @keyframes slideDown {
      from { transform: translateY(-120%); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    @keyframes slideUp {
      from { transform: translateY(0); opacity: 1; }
      to { transform: translateY(-120%); opacity: 0; }
    }
    .toast-enter {
      animation: slideDown 0.5s cubic-bezier(0.23, 1, 0.32, 1) forwards;
    }
    .toast-exit {
      animation: slideUp 0.5s cubic-bezier(0.7, 0, 0.84, 0) forwards;
    }

    /* 8. "LIQUID" ANIMATED GRADIENTS */
    @keyframes shimmer {
      0% { background-position: 200% 0; }
      100% { background-position: -200% 0; }
    }

    .animated-gradient-cyan {
      background-image: linear-gradient(90deg, #0ea5e9, #06b6d4, #22d3ee, #0ea5e9);
      background-size: 200% 100%;
      animation: shimmer 5s linear infinite;
    }

    .animated-gradient-green {
      background-image: linear-gradient(90deg, #16a34a, #22c55e, #4ade80, #16a34a);
      background-size: 200% 100%;
      animation: shimmer 5s linear infinite;
    }
  </style>
</head>

<body class="aurora-bg text-white min-h-screen p-4 md:p-8 selection:bg-cyan-500/30">

  <!-- Canvas for Confetti -->
  <canvas id="confetti-canvas" class="fixed inset-0 w-full h-full z-[100] pointer-events-none"></canvas>

  <!-- TOAST NOTIFICATION CONTAINER -->
  <div id="toast-container" class="fixed top-4 left-1/2 -translate-x-1/2 w-[90%] max-w-lg z-50">
    <!-- Success Toast -->
    <div id="toast-success" class="hidden items-center w-full p-3.5 mb-4 rounded-2xl shadow-lg text-sm font-semibold glass-card border-2 border-cyan-400/0">
      <div class="inline-flex items-center justify-center flex-shrink-0 w-6 h-6 text-cyan-300 bg-black/30 rounded-full">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
      </div>
      <div class="ml-2.5 text-cyan-100" id="toast-success-msg"></div>
    </div>
    <!-- Error Toast -->
    <div id="toast-error" class="hidden items-center w-full p-3.5 mb-4 rounded-2xl shadow-lg text-sm font-semibold glass-card border-2 border-red-400/0">
       <div class="inline-flex items-center justify-center flex-shrink-0 w-6 h-6 text-red-300 bg-black/30 rounded-full">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
      </div>
      <div class="ml-2.5 text-red-100" id="toast-error-msg"></div>
    </div>
  </div>

  <!-- MAIN CONTENT -->
  <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">

    <!-- Left Column: Feature Project -->
    <div class="w-full max-w-lg mx-auto lg:max-w-none lg:mx-0">
      <h1 class="text-3xl sm:text-4xl font-bold text-center text-white text-shadow-lg">DePIN Open-Source Fund</h1>
      <p class="text-center text-base text-gray-300 mt-2 mb-6">Fund the future. Build on DePIN.</p>

      <form id="create-form" action="/create" method="POST" enctype="multipart/form-data" 
            class="glass-card rounded-3xl p-6 md:p-8 space-y-5 transition-all duration-300 hover:shadow-2xl hover:shadow-cyan-500/20">
        <h2 class="text-2xl font-semibold text-center text-white mb-4">Feature Your Project</h2>

        <!-- Project Name -->
        <div>
          <label for="name" class="block mb-1.5 text-xs font-medium text-gray-300">Project Name</label>
          <input type="text" id="name" name="name" class="glass-card border border-white/10 text-white text-sm rounded-xl focus:ring-cyan-500 focus:border-cyan-500 block w-full p-2.5 transition-all" placeholder="My Awesome Project" required>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <!-- GitHub Link -->
          <div>
            <label for="githubLink" class="block mb-1.5 text-xs font-medium text-gray-300">GitHub Link</label>
            <input type="url" id="githubLink" name="githubLink" class="glass-card border border-white/10 text-white text-sm rounded-xl focus:ring-cyan-500 focus:border-cyan-500 block w-full p-2.5 transition-all" placeholder="https://github.com/..." required>
          </div>
          <!-- NEW: Contact Link -->
          <div>
            <label for="contactLink" class="block mb-1.5 text-xs font-medium text-gray-300">Contact (Email or Twitter)</label>
            <input type="text" id="contactLink" name="contactLink" class="glass-card border border-white/10 text-white text-sm rounded-xl focus:ring-cyan-500 focus:border-cyan-500 block w-full p-2.5 transition-all" placeholder="me@email.com or @twitter" required>
          </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <!-- Pledge Goal -->
          <div>
            <label for="fundingGoal" class="block mb-1.5 text-xs font-medium text-gray-300">Pledge Goal</label>
            <input type="number" id="fundingGoal" name="fundingGoal" class="glass-card border border-white/10 text-white text-sm rounded-xl focus:ring-cyan-500 focus:border-cyan-500 block w-full p-2.5 transition-all" placeholder="e.g., 100" required>
          </div>
          <!-- Project Image -->
          <div>
            <label for="fileToUpload" class="block mb-1.5 text-xs font-medium text-gray-300">Project Image</label>
            <input type="file" id="fileToUpload" name="fileToUpload" class="block w-full text-xs text-gray-300 file:mr-3 file:py-2 file:px-3 file:rounded-xl file:border-0 file:text-xs file:font-semibold file:bg-white/10 file:text-cyan-300 hover:file:bg-white/20 transition-all cursor-pointer" required>
          </div>
        </div>

        <!-- Description -->
        <div>
          <label for="description" class="block mb-1.5 text-xs font-medium text-gray-300">Description</label>
          <textarea id="description" name="description" rows="3" class="glass-card border border-white/10 text-white text-sm rounded-xl focus:ring-cyan-500 focus:border-cyan-500 block w-full p-2.5 transition-all" placeholder="A short, catchy description..." required></textarea>
        </div>

        <!-- Non-Profit Checkbox -->
        <div class="flex items-center pt-2">
          <input id="isNonProfit" name="isNonProfit" type="checkbox" class="w-4 h-4 text-cyan-500 bg-gray-700/50 border-gray-600 rounded focus:ring-cyan-600 ring-offset-gray-800 focus:ring-2 cursor-pointer">
          <label for="isNonProfit" class="ml-2.5 text-sm font-medium text-gray-300 cursor-pointer">This is a non-profit project (donations only)</label>
        </div>

        <!-- Submit Button -->
        <button type="submit" id="submit-button" class="w-full text-white font-semibold rounded-2xl text-base px-5 py-3 text-center
                                                        animated-gradient-cyan
                                                        transition-all duration-300 ease-in-out
                                                        hover:scale-105 hover:shadow-lg hover:shadow-cyan-500/30">
          Submit Project & Mint DePIN NFT
        </button>

        <!-- Loading Spinner -->
        <div id="loading-spinner" class="hidden fixed inset-0 z-[101] bg-black/70 backdrop-blur-md flex flex-col items-center justify-center">
          <div class="w-12 h-12 border-4 border-t-cyan-400 border-white/20 rounded-full animate-spin"></div>
          <p class="text-white text-lg font-semibold mt-4">Minting DePIN NFT...</p>
          <p class="text-gray-300 text-sm">This may take a moment. Please wait.</p>
        </div>
      </form>
    </div>

    <!-- Right Column: Fund Project -->
    <div class="w-full">
      <h2 class="text-3xl font-bold text-center text-white mb-6">Support a Project</h2>

      <div id="project-list" class="space-y-6">
        <% if (projects.length === 0) { %>
          <div class="glass-card rounded-3xl p-6 text-center text-gray-400">
            <h3 class="text-lg font-semibold mb-2">No Projects Yet</h3>
            <p class="text-sm">Be the first to feature a project!</p>
          </div>
        <% } %>

        <% projects.forEach(project => { %>
          <div class="glass-card rounded-3xl p-6 space-y-4
                      transition-all duration-300 ease-in-out
                      hover:scale-[1.02] hover:shadow-2xl hover:shadow-cyan-500/20">

            <!-- Card Header -->
            <div class="flex justify-between items-center">
              <h3 class="text-xl font-bold text-white"><%= project.name %></h3>
              <span class="px-3 py-0.5 text-xs font-semibold rounded-full
                <%= project.status === 'funding' ? 'bg-green-500/30 text-green-300' : 'bg-blue-500/30 text-blue-300' %>">
                <%= project.status === 'funding' ? 'Funding' : 'Complete' %>
              </span>
            </div>

            <p class="text-sm text-gray-300"><%= project.description %></p>

            <!-- Progress Bar -->
            <div>
              <div class="flex justify-between mb-1.5 text-xs font-medium text-gray-300">
                <span><span class="font-bold text-white text-sm"><%= project.pledges %></span> Pledges</span>
                <span class="text-right">Goal: <span class="font-bold text-white text-sm"><%= project.fundingGoal %></span></span>
              </div>
              <% const progress = (project.pledges / project.fundingGoal) * 100; %>
              <div class="w-full bg-white/10 rounded-full h-2.5">
                <div class="animated-gradient-cyan h-2.5 rounded-full transition-all duration-500 ease-out" 
                     style="width: <%= progress > 100 ? 100 : progress %>%"></div>
              </div>
            </div>

            <!-- Links -->
            <!-- NEW: Added Contact Link -->
            <div class="flex flex-wrap gap-x-5 gap-y-2 text-sm font-medium pt-2">
              <a href="<%= project.githubLink %>" target="_blank" class="flex items-center gap-1.5 text-gray-300 hover:text-white transition-all
                                                                        hover:scale-105 opacity-80 hover:opacity-100">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path fill-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.418 2.865 8.165 6.839 9.49.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.03-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.026 2.747-1.026.546 1.379.202 2.398.1 2.65.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.001 10.001 0 0022 12c0-5.523-4.477-10-10-10z" clip-rule="evenodd" /></svg>
                View on GitHub
              </a>
              <a href="<%= project.metadataUrl %>" target="_blank" class="flex items-center gap-1.5 text-gray-300 hover:text-white transition-all
                                                                         hover:scale-105 opacity-80 hover:opacity-100">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path></svg>
                View on IPFS (Proof)
              </a>
              <!-- NEW: Contact Link (conditionally renders) -->
              <% if (project.contactLink) { %>
                <a href="<%= project.contactLink.startsWith('@') ? 'https://twitter.com/' + project.contactLink.substring(1) : 'mailto:' + project.contactLink %>" target="_blank" class="flex items-center gap-1.5 text-gray-300 hover:text-white transition-all
                                                                                  hover:scale-105 opacity-80 hover:opacity-100">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                  Contact Creator
                </a>
              <% } %>
            </div>

            <!-- Action Buttons -->
            <div class="border-t border-white/10 pt-5 space-y-3">

              <!-- Logic to show buttons or "Funded" message -->
              <% if (project.status === 'funding' && project.pledges < project.fundingGoal) { %>
                <div class="grid grid-cols-2 gap-3">
                  <form action="/pledge/<%= project.id %>" method="POST" class="w-full">
                    <button type="submit" class="w-full text-white font-semibold rounded-xl px-4 py-2.5 text-sm text-center 
                                                    animated-gradient-green
                                                    transition-all duration-300 ease-in-out
                                                    hover:scale-105 hover:shadow-lg hover:shadow-green-500/30">
                      Pledge!
                    </button>
                  </form>
                  <form action="/complete/<%= project.id %>" method="POST" class="w-full">
                    <button type="submit" class="w-full text-white font-semibold rounded-xl px-4 py-2.5 text-sm text-center bg-gray-500
                                                      transition-all duration-300 ease-in-out
                                                      hover:bg-gray-600 hover:scale-105 hover:shadow-lg hover:shadow-gray-500/30">
                      Complete
                    </button>
                  </form>
                </div>
              <% } else { %>
                <p class="text-center font-semibold text-base text-cyan-300">
                  Project Funded & Completed!
                </p>
              <% } %>

              <!-- Admin Panel -->
              <div class="pt-2 text-center">
                <span onclick="toggleAdmin('<%= project.id %>')" class="cursor-pointer text-xs text-gray-400 hover:text-gray-200 transition-all">Admin Actions</span>
                <form id="admin-form-<%= project.id %>" action="/delete/<%= project.id %>" method="POST" class="hidden mt-3 space-y-2">
                  <input type="password" name="adminPin" class="glass-card border border-white/10 text-white text-sm rounded-lg focus:ring-red-500 focus:border-red-500 block w-full p-2" placeholder="Admin PIN" required>
                  <button type="submit" class="w-full text-white font-semibold rounded-lg px-4 py-2 text-center text-xs bg-red-600
                                                transition-all duration-300 ease-in-out
                                                hover:bg-red-700 hover:scale-105 hover:shadow-lg hover:shadow-red-500/30">
                    Delete Project
                  </button>
                </form>
              </div>
            </div>

          </div>
        <% }) %>
      </div>
    </div>

  </div> <!-- End Main Grid -->

  <!-- JAVASCRIPT LOGIC -->
  <script>
    // --- Admin Panel Toggle ---
    function toggleAdmin(id) {
      const form = document.getElementById(`admin-form-${id}`);
      form.classList.toggle('hidden');
    }

    // --- Loading Spinner ---
    const createForm = document.getElementById('create-form');
    const loadingSpinner = document.getElementById('loading-spinner');
    if (createForm) {
      createForm.addEventListener('submit', () => {
        // Check form validity before showing spinner
        if (createForm.checkValidity()) {
          loadingSpinner.classList.remove('hidden');
        }
      });
    }

    // --- Toast & Confetti Logic ---
    const toastContainer = document.getElementById('toast-container');
    const toastSuccess = document.getElementById('toast-success');
    const toastSuccessMsg = document.getElementById('toast-success-msg');
    const toastError = document.getElementById('toast-error');
    const toastErrorMsg = document.getElementById('toast-error-msg');
    const urlParams = new URLSearchParams(window.location.search);
    const success = urlParams.get('success');
    const error = urlParams.get('error');

    // --- THE CONFETTI LAUNCHER! ---
    function launchConfetti() {
      const myCanvas = document.getElementById('confetti-canvas');
      if (!myCanvas) return;
      const myConfetti = confetti.create(myCanvas, {
        resize: true,
        useWorker: true
      });
      myConfetti({
        particleCount: 150,
        spread: 100,
        origin: { y: 0.6 },
        colors: ['#06b6d4', '#22d3ee', '#0ea5e9', '#67e8f9'] // Cyan colors
      });
    }

    // --- THE TOAST DISPLAY LOGIC ---
    function showToast(toastEl, msgEl, msg) {
      if (!toastEl || !msgEl) return;

      msgEl.textContent = msg;
      toastEl.classList.remove('hidden', 'toast-exit');
      toastEl.classList.add('toast-enter');

      // Animate the border
      toastEl.style.borderColor = toastEl.id.includes('success') ? '#22d3ee' : '#f87171';

      setTimeout(() => {
        toastEl.classList.remove('toast-enter');
        toastEl.classList.add('toast-exit');
      }, 5000); // Wait 5 seconds

      // Clean the URL
      window.history.replaceState({}, document.title, "/");
    }

    if (success) {
      showToast(toastSuccess, toastSuccessMsg, success);
      // Fire confetti ONLY for project creation or deletion
      if (success.includes('Project created') || success.includes('cleared') || success.includes('deleted')) {
        launchConfetti();
      }
    }

    if (error) {
      showToast(toastError, toastErrorMsg, error);
    }
  </script>
</body>
</html>


